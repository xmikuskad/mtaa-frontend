<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtaa.techtalk">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.TechTalk">
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TechTalk.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainMenuActivity"/>
        <activity android:name=".activities.CategoriesActivity"/>
        <activity android:name=".activities.ProductsActivity"/>
        <activity android:name=".activities.ReviewsActivity"/>
        <activity android:name=".activities.FirstLaunchActivity"/>
        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.CreateAccountActivity"/>
        <activity android:name=".activities.RegisterSuccessActivity"/>
        <activity android:name=".activities.SettingsActivity"/>
        <activity android:name=".activities.ReviewInfoActivity"/>
        <activity android:name=".activities.AddReviewActivity"/>
    </application>
</manifest>